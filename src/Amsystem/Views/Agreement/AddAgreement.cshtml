@model Amsystem.Data.Entities.Agreement

@{
    ViewBag.Title = "Agreement";
}

<h2>Create agreement</h2>

@using (Html.BeginForm("AddAgreement", "Agreement", null, FormMethod.Post, new {@class = "form-horizontal"}))
{
    <div class="form-group">
        @Html.LabelFor(x => x.Description, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Description, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.Observation, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextAreaFor(x => x.Observation, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(x => x.DueDate, new { @class = "col-sm-2 control-label" })
        <div class="col-sm-10">
            @Html.TextBoxFor(x => x.DueDate, "Due Date", new { @class = "form-control", type = "date" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn btn-primary">Save</button>
        </div>
    </div>
}

<div>
    <a href="@Url.Action("AllAgreement")" title="Back to Agreements" class="btn btn-default"><i class="fa fa-arrow-left" aria-hidden="true"></i></a>
</div>
